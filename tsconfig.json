{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./lib",

    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",

    "declaration": true,
    "declarationMap": true,

    "importHelpers": true,

    "downlevelIteration": true,
    "newLine": "lf",
    "strict": true,

    "lib": [
      "es2016"
    ]
  },

  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
